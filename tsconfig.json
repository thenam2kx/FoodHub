{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "components/*": ["./src/components/*"],
      "utils/*": ["./src/utils/*"],
      "theme/*": ["./src/theme/*"],
      "assets/*": ["./src/assets/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
