# Áp dụng cho tất cả các file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Các file markdown
[*.md]
trim_trailing_whitespace = false

# Các file JSON
[*.json]
indent_size = 2

# Các file YAML
[*.yml, *.yaml]
indent_size = 2

# Các file TypeScript và JavaScript
[*.ts, *.tsx, *.js, *.jsx]
indent_size = 2

# Các file CSS, SCSS, và Styled Components
[*.css, *.scss]
indent_size = 2